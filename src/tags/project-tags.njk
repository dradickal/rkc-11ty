---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /project-tags/{{ tag }}/
layout: base.njk
---


<div class="page-container">
  {# Header #}
  <div class="tag-list tag-list--no-wrap">
    <h4 class="tag-list__title">Projects Tagged: "{{ tag }}"</h4>
    <a class="btn btn--sm btn--danger" href="/projects">Clear Filter</a>
  </div>

  {# Projects #}
  {% from "macros/projectlist.njk" import projectlist %}
  {{ projectlist(projects = collections[tag] | reverse) }}

  <nav>
    <a href="{{ '/projects/' | url }}">‚Üê View All Projects</a>
  </nav>
</div>
